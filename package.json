{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "node backend/dist/server.js",
    "dev": "nodemon backend/src/server.ts",
    "build": "tsc -p backend/.",
    "commit": "cz",
    "prepare": "husky install",
    "format": "npx prettier . --check",
    "format:fix": "npx prettier --write .",
    "lint": "npx eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint --fix ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/validator": "^13.7.7",
    "bcrypt": "^5.0.1",
    "commitizen": "^4.3.0",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.21",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.39.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-config-utility": "^1.1.1",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "config": {
    "commitizen": {
      "scopeList": [
        "frontend",
        "backend"
      ],
      "disableBreakingChanges": true,
      "types": {
        "feat": {
          "description": "A new feature or change in functionality",
          "title": "Features"
        },
        "fix": {
          "description": "A bug fix",
          "title": "BugFixes"
        },
        "refactor": {
          "description": "A code change that neither fixes a bug nor adds a new feature",
          "title": "Refactors"
        },
        "chore": {
          "description": "Changes to the build process or auxiliary tools or libraries such as documentation",
          "title": "Chores"
        },
        "test": {
          "description": "Adding missing tests",
          "title": "Tests"
        },
        "revert": {
          "description": "A code change to revert a previous commit",
          "title": "Reverts"
        }
      },
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
